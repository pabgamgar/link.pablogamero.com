---
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:wght@700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="bg-slate-50 text-slate-900 font-['Inter'] antialiased">
        <main
            class="min-h-screen flex flex-col items-center justify-center p-4"
        >
            <slot />
        </main>
    </body>
</html>

<style is:global>
    h1,
    h2 {
        font-family: "Playfair Display", serif;
    }
</style>
